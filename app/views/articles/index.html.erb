<h1  style="text-align:center">Showing all articles</h1>
<p class="header" style="text-align:center"><%= link_to "create new article", new_article_path, class:"btn btn-success"%></p>
<div class="cont">
<% @article.each do | article | %>
<div class="card bg-light  w-75" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to "#{article.title}",article_path(article)%></h5>
    <p class="card-text"><%= article.description %></p>
    <div class="butt">
   <%= link_to "edit this article", edit_article_path(article), class:"btn btn-primary" %> 
   <%= button_to 'delete this article', article_path(article),method: :delete, class:"btn btn-danger"%>

  </div>
  </div>
</div>
<% end %>
</div>


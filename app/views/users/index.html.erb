<h1 style="text-align:center"> All Users</h1>
<%= will_paginate @user %>
<div class="conto">
<% @user.each do | user| %>
 <div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
    <%= link_to gravatar_for(user,size:150), user_path(user), class: "img-fluid rounded-start"%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= link_to user.username, user_path(user)%></h5>
        <p class="card-text">I am a teacher from england</p>
        <p class="card-text"><small class="text-muted"><%= pluralize(user.articles.count, "article") if user.articles %></small></p>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
<%= will_paginate @user %>